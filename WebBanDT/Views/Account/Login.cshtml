@model LoginViewModel
@{
    ViewData["Title"] = "Register";
}
<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Login to your account</h2>
					<form asp-action="Login" asp-controller="Account">
					  <div asp-validation-summary="All" class="text-danger"></div> 
						<div class="form-group">
							<label>Username</label>
							<input asp-for="Username" class="form-control" /> 
							<span asp-validation-for="Username" class="text-danger" />
						</div>
						
						<div class="form-group">
							<label>Password</label>
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger" />
						</div>
						
						<button class="btn btn-default">Login</button>
						<a asp-action="Create" asp-controller="Account"> Create an account</a>
					</form>
				</div><!--/login form-->
			</div>
			
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

}
