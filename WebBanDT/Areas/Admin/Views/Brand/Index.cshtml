@model IEnumerable<BrandModel>
@{
    ViewData["title"] = "Danh sách thương hiệu";
}
<h3>List Brands</h3>
<a asp-action="Create" asp-controller="Category"> Add Brand</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Brand Name</th>
            <th scope="col">Brand Description</th>
            <th scope="col">Brand Slug </th>
            <th scope="col"> Brand Status </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                @* <td>@item.Description</td> *@
                <td>@Html.Raw(item.Description)</td>

                <td>@item.Slug</td>
                <td>
                    @if (@item.Status == 1)
                    {
                        <span class="text text-success"> Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-success"> Ẩn</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm confirmDeletion" asp-controller="Brand" asp-route-Id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Brand" asp-route-Id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }


    </tbody>
</table>

